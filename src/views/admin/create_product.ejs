<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        Admin
    </title>

    <%- include("./block/style.ejs") %>

        <style>
            body {
                color: #566787;
                background: #f5f5f5;
                font-family: 'Varela Round', sans-serif;
                font-size: 13px;
            }
        </style>
</head>

<body class="g-sidenav-show  bg-gray-200">
    <%- include("./block/siderbar.ejs") %>
        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <div style="margin-top: 50px;" class="container">
                <h4>THÊM SẢN PHẨM</h4>
                <form method="post" action="/admin/products/store" enctype="multipart/form-data">
                    <% if(erro.length>0) { %>
                        <div style="border-radius: 4px;color: aliceblue;font-size: 16px;" class="alert alert-danger"
                            role="alert">
                            <%= erro %>
                        </div>
                        <% } %>
                            <% if(success.length>0) { %>
                                <div style="border-radius: 4px;color: aliceblue;font-size: 16px;"
                                    class="alert alert-success" role="alert">
                                    <%= success %>
                                </div>
                                <% } %>
                                    <div class="row mb-4">
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example1">Tên sản phẩm:</label>
                                                <input type="text" id="form6Example1" class="form-control"
                                                    name="name" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Giá:</label>
                                                <input type="text" id="form6Example2" class="form-control"
                                                    name="price" />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form6Example2">Mô tả:</label>
                                                <input type="text" id="form6Example2" class="form-control"
                                                    name="description" />
                                            </div>
                                        </div>
                                        <div style="margin-top: 20px;" class="row mb-4">
                                            <div class="row">
                                                <div class="col-3">
                                                    <img width="200px" src="/images/logo_create.png" alt=""
                                                        id="selectedImage">
                                                </div>
                                                <div class="col-9">
                                                    <div>
                                                        <div>
                                                            <div data-mdb-input-init class="form-outline">
                                                                <label class="form-label"
                                                                    for="form6Example2">Ảnh:</label>
                                                                <input type="file" id="images_change"
                                                                    class="form-control" name="image"
                                                                    onchange="displaySelectedImage()" />
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <div style="margin-top: 20px;" data-mdb-input-init
                                                                class="form-outline">
                                                                <label class="form-label" for="form6Example2">Danh
                                                                    Mục:</label>
                                                                <select
                                                                    class="browser-default custom-select form-control"
                                                                    name="category_id">
                                                                    <option selected value="">Chọn danh mục sản phẩm
                                                                    </option>
                                                                    <% categories.forEach(function(item){ %>
                                                                        <option value="<%= item.id %>">
                                                                            <%= item.name %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <div style="margin-top: 20px;" data-mdb-input-init
                                                                class="form-outline">
                                                                <label class="form-label" for="form6Example2">Thương
                                                                    hiệu:</label>
                                                                <select
                                                                    class="browser-default custom-select form-control"
                                                                    name="brand_id">
                                                                    <option selected value="">Chọn thương hiệu</option>
                                                                    <% brands.forEach(function(item){ %>
                                                                        <option value="<%= item.id %>">
                                                                            <%= item.name %>
                                                                        </option>
                                                                        <% }) %>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div style="margin-top: 20px;margin-left: 5px;" class="row mb-4">
                                            <button type="submit"
                                                style="background-color: #3b71ca;border: none;height: 50px;border-radius: 8px;font-size: 16px;font-weight: bold;color: azure;">THÊM
                                                SẢN PHẨM</button>
                                        </div>
                </form>
            </div>
        </main>
        <%- include("./block/js.ejs") %>
            <script>
                function displaySelectedImage() {
                    var input = document.getElementById("images_change");
                    var selectedImage = document.getElementById("selectedImage");

                    if (input.files && input.files[0]) {
                        var reader = new FileReader();

                        reader.onload = function (event) {
                            selectedImage.src = event.target.result;
                        };

                        reader.readAsDataURL(input.files[0]);
                    }
                }
            </script>

</html>